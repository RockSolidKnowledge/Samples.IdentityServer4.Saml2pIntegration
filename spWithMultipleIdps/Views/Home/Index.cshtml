@using Microsoft.AspNetCore.Authentication
@{
    var result = await Context.AuthenticateAsync();
}
<div class="row">
    <div class="col-xs-12">
        @if (result.Succeeded)
        {
            <h2>Authenticated</h2>
            <ul>
                @foreach (var claim in result.Principal.Claims)
                {
                    <li><strong>@claim.Type:</strong> @claim.Value</li>
                }
            </ul>
        }
        else
        {
            <h2>Unauthenticated</h2>
        }
    </div>
    <div class="col-xs-12">
        <a asp-action="ChallengeScheme" asp-route-scheme="pkcs1" class="btn btn-success" style="font-weight: bold;">Login with Default PKCS1</a>
        <a asp-action="ChallengeScheme" asp-route-scheme="oaep" class="btn btn-danger" style="font-weight: bold;">Login with enforced OAEP</a>
    </div>
</div>